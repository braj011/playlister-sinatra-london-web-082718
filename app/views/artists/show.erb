<h1>   <%= @artist.name %>   </h1>


<h2> Songs  </h2>
<ul>
<% @artist.songs.each do |song| %>
    <li>
    <a href="../songs/<%= song.slug %>">  <%= song.name %> </a>
    </li>
<% end %>
</ul>

<h2> Genres  </h2>

<ul>
  <% array = @artist.song_genres.map {|sg| Genre.find(sg.genre_id) }.map {|genre| genre.name}.uniq %>
  <% array.each do |genre| %>
      <li>
    <a href="../genres/<%= genre %>">  <%= genre %>  </a>
      </li>
  <% end %>
</ul>


